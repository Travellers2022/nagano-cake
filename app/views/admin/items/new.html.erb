<h1><strong>商品新規登録</strong></h1>

  <%= form_with model: @item do |f| %>

    <div class="form-group">
      <%= f.label :item_image, "商品画像" %>
      <%= f.file_field :item_image, accept: "image/*" %>
    </div>

    <div class="form-group">
      <%= f.label :name, "商品名" %>
      <%= f.text_field :name, atofocus: true, placeholder: "商品名" %>
    </div>

    <div class="form-group">
      <%= f.label :explanation, "商品説明" %>
      <%= f.text_area :explanation, placeholder: "ここに説明文を記述します" %>
    </div>

    <div class="form-group">
      <%= f.label :genre_id, "ジャンル" %>
      <%= f.collection_select :genre_id, @genre, :id, :name, :prompt => "--選択してください--" %>
    </div>

    <div class="form-group">
      <%= f.label :price_without_tax, "税抜価格" %>
      <%= f.text_field :price_without_tax, placeholder:"1000" %>円
    </div>

    <div class="form-group">
      <%= f.label :is_sale, "販売ステータス" %>
      <%= f.radio_button :is_sale, :true, checked: true %>
      <%= f.label :is_sale, "販売中", value: :true %>
      <%= f.radio_button :is_sale, :false %>
      <%= f.label :is_sale, "販売停止中", value: :false %>
    </div>

    <div class="form-group">
      <%= f.submit '新規投稿', class: "btn btn-outline-success" %>
    </div>

  <% end %>