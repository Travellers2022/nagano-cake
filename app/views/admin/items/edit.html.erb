<h3><strong>商品編集</strong></h3>

  <%= form_with model: @item do |f| %>
    <table>
      <tr>
        <div class="form-group">
          <td><%= f.label :item_image, "商品画像" %></td>
          <td><%= f.file_field :item_image, accept: "image/*" %></td>
        </div>
      </tr>

      <tr>
        <div class="form-group">
          <td><%= f.label :name, "商品名" %></td>
          <td><%= f.text_field :name, atofocus: true, placeholder: "商品名" %></td>
        </div>
      </tr>

      <tr>
        <div class="form-group">
          <td><%= f.label :explanation, "商品説明" %></td>
          <td><%= f.text_area :explanation, placeholder: "ここに説明文を記述します" %></td>
        </div>
      </tr>

      <tr>
        <div class="form-group">
          <td><%= f.label :genre_id, "ジャンル" %></td>
          <td><%= f.collection_select :genre_id, @genre, :id, :name, :prompt => "--選択してください--" %></td>
        </div>
      </tr>

      <tr>
        <div class="form-group">
          <td><%= f.label :price_without_tax, "税抜価格" %></td>
          <td><%= f.text_field :price_without_tax, placeholder:"1000" %>円</td>
        </div>
      </tr>

      <tr>
        <div class="form-group">
          <td><%= f.label :is_sale, "販売ステータス" %></td>
          <td>
            <%= f.radio_button :is_sale, :true, checked: true %>
            <%= f.label :is_sale, "販売中", value: :true %>
            <%= f.radio_button :is_sale, :false %>
            <%= f.label :is_sale, "販売停止中", value: :false %>
          </td>
        </div>
      </tr>

      <tr>
        <div class="form-group">
          <td><%= f.submit '変更を保存', class: "btn btn-success" %></td>
        </div>
      </tr>
    </table>
  <% end %>