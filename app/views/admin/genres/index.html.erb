<div class="container">
        <div class="row">
            <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
                <h2 class>ジャンル一覧・追加</h2>
                    <%= form_with model: [:admin, @genre], local: false do |f| %>
                        <%= render "layouts/errors", obj: @genre %>
                        <div class="form-group">
                            <%=f.label :ジャンル名 %>
                            <%=f.text_field :name, placeholder: "ジャンル名" %>
                        </div>
                        <div class="form-group">
                        <%=f.submit "新規登録", class: "btn btn-success" %>
                        </div>
                    <% end %>
            </div>
        </div>
        <div class="row mt-5">
            <div class="col-5">
                <table class="table table-light">
                    <thead class="table-active text-center">
                        <tr>
                            <th class="text-white bg-dark">ジャンル</th>
                            <th class="text-white bg-dark"></th>
                        </tr>
                    </thead>
                    <tbody>
                        <% @genres.each do |genre| %>
                            <tr>
                                <td class="text-center"><%= genre.name %></td>
                                <td class="text-right"><%= link_to "編集する", edit_admin_genre_path(genre), class: "btn btn-success" %></td>
                            </tr>
                        <% end %>
                        
                    </tbody>
                </table>
            </div>
        </div>
    </div>