<div class="container">
        <div class="row">
            <div class="col-md-10">
                <h2 class="mb-3 border_bottom_dark">ジャンル一覧・追加</h2>
                    <%= form_with model: [:admin, @genre], local: true do |f| %>
                        <%= render "layouts/errors", model: @genre %>
                        <div class="form-group">
                            <%=f.label :ジャンル名 %>
                            <%=f.text_field :name, placeholder: "ジャンル名", class:'form-control' %>
                        </div>
                        <div class="form-group">
                        <%=f.submit "新規登録", class: "btn btn-primary offset-md-2 " %>
                        </div>
                    <% end %>
            </div>
        </div>
        <div class="row mt-5">
            <div class="col-md-10">
                <table class="table table-light">
                    <thead class="table-active text-center">
                        <tr>
                            <th class="text-white bg-dark">ジャンル</th>
                            <th class="text-white bg-dark"></th>
                        </tr>
                    </thead>
                    <tbody>
                        <% @genres.each do |genre| %>
                            <tr>
                                <td class="text-center"><%= genre.name %></td>
                                <td class="text-right"><%= link_to "編集する", edit_admin_genre_path(genre), class: "btn btn-success" %></td>
                            </tr>
                        <% end %>

                    </tbody>
                </table>
            </div>
        </div>
    </div>