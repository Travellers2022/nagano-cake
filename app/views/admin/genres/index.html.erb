<div class="container">
        <div class="row">
            <div class="col-xs-10 col-xs-offset-1">
                <h2 class="offset-1 mt-4">ジャンル一覧・追加</h2>
                
                    <%= render "layout/error_messages", ---- %>
                    <%= form_with model: @genre, url:-----, do |f| %>
                        <%=f.label :ジャンル名 %>
                        <%=f.text_field :name, placeholder: "ジャン名" %>
                        <%=f.submit "新規登録", class: "btn btn-success" %>
                    <% end %>
            
            </div>
        </div>
        <div class="row mt-5">
            <div class="col-5">
                <table class="table table-light">
                    <thead class="table-active text-center">
                        <tr>
                            <th class="text-white bg-dark">ジャンル</th>
                            <th class="text-white bg-dark"></th>
                        </tr>
                    </thead>
                    <tbody>
                       
                        <% @genres.each do |genre| %>
                            <tr>
                                <td class="text-center"><%= genre.name %></td>
                                <td class="text-center"><%= "編集する", -----path(genre), class: "btn btn-success" %></td>
                            </tr>
                        <% end %>
                        
                    </tbody>
                </table>
            </div>
        </div>
    </div>