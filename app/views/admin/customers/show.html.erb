<div class="container">
  <div class="row">
    <div class="col-md-3 offset-md-1 mb-5 mt-5">
      <h3><%= "#{@customer.last_name}#{@customer.first_name}" %>さんの会員詳細</h3>
    </div>
  </div>

   <div class="row justify-content-left">
    <div class="col-md-8">
      <table class="table">
        <tr>
          <th>会員ID</th>
          <td><%= @customer.id %></td>
        </tr>
        <tr>
          <th>氏名</th>
          <td><%= "#{@customer.last_name}" "　" "#{@customer.first_name}" %></td>
        </tr>
        <tr>
          <th>フリガナ</th>
          <td><%= "#{@customer.kana_last_name}" "　" "#{@customer.kana_first_name}" %></td>
        </tr>
        <tr>
          <th>郵便番号</th>
          <td><%= @customer.postal_code %></td>
        </tr>
        <tr>
          <th>住所</th>
          <td><%= @customer.address %></td>
        </tr>
        <tr>
          <th>電話番号</th>
          <td><%= @customer.phone_number %></td>
        </tr>
        <tr>
          <th>メールアドレス</th>
          <td><%= @customer.email %></td>
        </tr>
        <tr>
          <th>会員ステータス</th>
          <td><%= @customer.is_deleted %></td>
        </tr>
      </table>
    </div>
  </div>


</div>