<div class="container">
    <div class="row">
        <div class="col-10 offset-2">
            <h3>注文履歴詳細</h3>
        </div>
    </div>

    <div class="row">
        <div class="col-10 offset-1">
            <table>
                <tr>
                    <th>購入者</th>
                    <td>&emsp;&emsp;<%= @order.customer.last_name %><%= @order.customer.first_name %></td>
                </tr>
                <tr>
                    <th>注文日</th>
                    <td><%= @order.created_at.strftime("%Y/%m/%d") %></td>
                </tr>
                <tr>
                    <th>配送先</th>
                    <td>
                        &emsp;&emsp;<%= @order.postal_code %><%= @order.shipping_address %>
                        &emsp;&emsp;<%= @order.shipping_name %>
                    </td>
                </tr>
                <tr>
                    <th>支払方法</th>
                    <td><%= @order.payment_method_i18n %></td>
                </tr>
                <tr>
                    <th>注文ステータス</th>
                    <td>

           

                        <%= form_with model: @order, url: admin_order_path(@order), method: :patch  do |f| %>

                            <%= f.select :order_status, Order.order_statuses_i18n.invert, {prompt: false}  %>
                            <%= f.submit "更新" %>
                        <% end %>
                    </td>
                </tr>
            </table>
        </div>
    </div>

    <div class="row">
        <div class="col-10 offset-1">
            <table>
                <thead>
                    <tr>
                        <th>商品名</th>
                        <th>単価（税込）</th>
                        <th>数量</th>
                        <th>小計</th>
                        <th>制作ステータス</th>
                    </tr>
                </thead>

                <tbody>
                    <% @order.order_items.each do |order_item| %>
                    <tr>
                        <td><%= order_item.item.name %></td>
                        <td><%= ((order_item.item.price_without_tax) * 1.1).round.to_s(:delimited) %>円</td>
                        <td><%= order_item.quantity %>個</td>
                        <td><%= (order_item.item.price_without_tax * order_item.quantity * 1.1).round.to_s(:delimited) %>円</td>
                        <td>
                            <%= form_with model: order_item, url: admin_order_item_path(order_item), method: :patch do |f|%>
                                <%= f.select :production_status, OrderItem.production_statuses_i18n.invert, {prompt: false}  %>
                                <%= f.submit "更新", class: "btn btn-success m-1" %>
                            <% end %>
                        </td>
                    </tr>
                    <% end %>
                </tbody>
            </table>
        </div>

        <div class="col-lg-3 col align-self-end mb-3"style="margin-left: 8vh;">
            <table>
                <tr>
                    <th>商品合計</th>  
                    <td>&ensp;&ensp;<%=  (@order.bill - @order.postage).to_s(:delimited) %>円</td>
                    <th>送料</th>
                    <td><%= @order.postage %>円</td>
                    <th>請求金額合計</th>
                    <td><%= @order.bill %>円</td>
                </tr>
            </table>
        </div>
    </div>
</div>