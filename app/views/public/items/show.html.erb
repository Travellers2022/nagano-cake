  <div class="border border-dark">
    <p>ジャンル検索</p>
  </div>
  <div class="border border-dark">
    <% @genres.each do |genre| %>
      <%= genre.name %>
    <% end %>
  </div>

  <div class="image">
    <%= image_tag @item.item_image, :size => '100x100' %>
  </div>
  <table>
    <div>
      <tr>
        <td><h2><%= @item.name %></h2></td>
        <td><p><%= @item.explanation %></p></td>
        <td><p>￥<%= @item.add_tax_price.to_s(:dalimited) %>(税込)</p></td>
        <% if @item.is_sale == true %>
          <%= form_with model: @cart_item,url: "/cart_items", local: true do |f| %>
            <td>
              <%= f.select :quantity, *[1..10], {include_blank: '個数選択'} %>
              <%= f.hidden_field :item_id, :value => @item.id %>
              <%= f.submit "カートに入れる", class: "btn btn-success" %>
            </td>
          <% end %>
        <% end %>
      </tr>
    </div>
  </table>