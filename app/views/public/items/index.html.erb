  <div class="container">
    <div class="row">
      <div class="col-xs-2">
        <table class="genre-table table table-bordered table-hover">
          <thead class="genre-thead">
            <tr>
              <th class="active">ジャンル検索</th>
            </tr>
          </thead>
          <tbody>
            <% @genres.each do |genre| %>
            <tr>
              <td>
                  <%= genre.name %>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      <div class="col-xs-10">
        <h4><strong>商品一覧</strong></h4>
        <p>(全<%= @items.count %>件)</p>
        <div class="col-xs-3 text-center">
              <% @items.each do |item| %>
               <%= link_to item_path(item.id) do %>
                  <%= image_tag item.item_image, :size => '100x100' %>
                  <%= item.name %>
                <% end %>
                ￥<%= item.add_tax_price.to_s(:dalimited) %>
              <% end %>
        </div>
      </div>
      <div class="row justify-content-center">
        <div class="col-2 align-self-center">
          <br><%= paginate @items %>
        </div>
    </div>
  </div>