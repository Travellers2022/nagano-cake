  <div class="container">
    <div class="row">
      <div class="col-md-2">
        <table class="genre-table table table-bordered table-hover">
          <thead class="genre-thead">
            <tr>
              <th class="active">ジャンル検索</th>
            </tr>
          </thead>
          <tbody>
            <% @genres.each do |genre| %>
            <tr>
              <td>
                  <%= genre.name %>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      <div class="col-md-10">
        <h4><strong>商品一覧</strong><span class="font">(全<%= @total_items %>件)</span></h4>

        <div class="row">
          <% @items.each do |item| %>
            <div class="col-xs-3 mt-3 mx-3 product-photo">
              <div class="mx-auto imgWrap">
                <%= link_to item_path(item.id) do %>
                  <%= image_tag item.item_image, :size => '200x150' %><br>
                  <%= item.name %>
                <% end %>
              </div>
              ￥<%= item.add_tax_price.to_s(:dalimited) %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>

    <div class="row justify-content-center">
      <div class="col-2 align-self-center">
        <br><%= paginate @items %>
      </div>
    </div>
  </div>