<div class="container">
    <div class="row">
        <div class="col-xs-5 col-xs-offset-1">
            <h2>配送先登録・一覧</h2>
            <%= form_with model: @shipping_addresse, url:shipping_addresses_path do |f| %>
                <div class="form-group">
                    <label>郵便番号（ハイフンなし）</label>
                    <%= f.text_field :postal_code %>
                </div>
                
                <div class="form-group">
                    <label>住所</label>
                    <%= f.text_field :address %>
                </div>
                
                <div class="form-group">
                    <label>宛名</label>
                    <%= f.text_field :name %>
                </div>
                
                <div class="form-group">
                    <%= f.submit "新規登録", class: "btn btn-success" %>
                </div>
                
            <% end %>
            
            <table>
                <thead>
                    <tr>
                        <th>郵便番号</th>
                        <th>住所</th>
                        <th>宛名</th>
                    </tr>
                </thead>
                <tbody>
                    <%= @shipping_addresse.each do |shipping_address|%>
                            <tr>
                                <td><%= shipping_addresse.postal_code %></td>
                                <td><%= shipping_addresse.address %></td>
                                <td><%= shipping_addresse.name %></td>
                                <td>
                                    <%= link_to "編集する",  edit_shipping_address_path(shipping_addresse), class: "btn btn-success"  %>
                                    <%= link_to "削除する", shipping_addresses_path, class: "btn btn-danger" %>
                                </td>
                            </tr>
                    <% end %>
                </tbody>
            </table>
        </div>
    </div>
</div>