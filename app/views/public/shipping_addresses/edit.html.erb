<div class="container">
    <div class="row">
        <div class="col-xs-5 col-xs-offset-1">
            <h2>配送先編集</h2>
            <%= form_with model :@shipping_address, url:shipping_addresses_path, method: :patch do |f| %>
                <div class="form-group">
                    <%= f.label :postal_code,"郵便番号(ハイフンなし)"%>
                    <%= f.text_field :postal_code %>
                </div>
                
                <div class="form-group">
                    <%= f.label :address,"住所" %>
                    <%= f.text_area :address %>
                </div>
                
                <div class="form-group">
                    <%= f.label :name,"宛名"%>
                    <%= f.text_field :name %>
                </div>
                
                <div class="form-group">
                    <%= f.submit "変更内容を保存", class:"btn btn-success" %>
                </div>
            <% end %>
        </div>
    </div>
</div>