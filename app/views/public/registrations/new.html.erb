<div class="container">
  <div class="row">
    <div class="col3-md">
      <h3 class="p-2">新規会員登録</h3>
    </div>
  </div>

    <%= form_with model: @customer, url: new_customer_registration_path do |f| %>
      <%= render "public/shared/error_messages", resource: resource %>

        <div class="field">
          <%= f.label :"名前" %>
          <%= f.label :"(姓)" %><%= f.text_field :last_name %>
          <%= f.label :"(名)" %><%= f.text_field :first_name %>
        </div>

        <div class="field">
          <%= f.label :"フリガナ" %>
          <%= f.label :"(セイ)" %><%= f.text_field :last_name %>
          <%= f.label :"(メイ)" %><%= f.text_field :first_name %>
        </div>

        <div class="field">
          <%= f.label :メールアドレス %>
          <%= f.text_field :email %>
        </div>

        <div class="field">
          <%= f.label :郵便番号 %>
          <%= f.text_field :postal_code %>
        </div>

        <div class="field">
          <%= f.label :"住所" %>
          <%= f.text_field :address %>
        </div>

        <div class="field">
          <%= f.label :"電話番号" %>
          <%= f.text_field :phone_number %>
        </div>

        <div class="field">
          <%= f.label :"パスワード" %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> 文字以上)</em>
          <% end %>
          <%= f.password_field :password, autocomplete: "new-password" %>
        </div>

        <div class="field">
          <%= f.label :"パスワード(確認用)" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        </div>

        <div class="actions">
          <%= f.submit "新規登録", class: "btn btn-success btn-sm" %>
        </div>

    <% end %>

    <div class="row">
      <div class="col3-md">
        <h3 class="p-2">既に登録済みの方</h3>
      </div>
    </div>
    <p><%= link_to "こちら", customer_session_path %>からログインしてください。</p>

</div>
