<div class="container">
    <div class="row">
         <div class="col-10 offset-2">
            <h3>注文履歴詳細</h3>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-7">
            <table>
                <h4>注文情報</h4>
                <tr>
                    <th>注文日</th>
                        <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
                </tr>
                <tr>
                    <th>配送先</th>
                    <td>
                        〒<%= @order.postal_code %>
                        <%= @order.shipping_address %>
                        <%= @order.shipping_name %>
                    </td>
                </tr>
                <tr>
                    <th>支払方法</th>
                    <td><%= @order.payment_method_i18n %></td>
                </tr>
                <tr>
                    <th>ステータス</th>
                    <td><%= @order.order_status_i18n %></td>
                </tr>
            </table>
        </div>

        <div class="col-lg-7">
            <h4>注文内容</h4>
            <table>
                <thead>
                    <tr>
                         <th>商品</th>
                         <th>単価(税込）</th>
                         <th>個数</th>
                         <th>小計</th>
                    </tr>
                </thead>
                <tbody>
                    <% @order.order_items.each do |order_item| %>
                        <tr>
                            <td><%= order_item.item.name %></td>
                            <td><%= order_item.subprice %>円</td>
                            <td><%= order_item.quantity%></td>
                            <td><%= (order_item.subprice * order_item.quantity).to_s(:delimited) %>円</td>
                        </tr>
                    <% end %>
                </tbody>
            </table>
        </div>

        <div class="col-lg-3">
            <table>
                <h4>請求情報</h4>
                <tr>
                    <th>商品合計</th>
                    <td><%= (@order.bill - @order.postage).to_s(:delimited) %>円</td>
                </tr>
                <tr>
                    <th>配送料</th>
                    <td><%= @order.postage %>円</td>
                </tr>
                <tr>
                    <th><strong>ご請求金額</strong></th>
                    <td><%= @order.bill %>円</td>
                </tr>
            </table>
        </div>
    </div>
</div>