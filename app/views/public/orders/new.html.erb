
        
            <h3>注文情報入力</h3>
            <%= form_with model: @order, method: :post, local: true do |f| %>
               
               <!--支払い方法-->
               
                <div class="form-group">
                    <label>支払い方法</label>
                        <%= f.radio_button :payment_method, Order.payment_methods.key(0) %>
                        <%= f.label :payment_method, Order.payment_methods_i18n[:credit_card] %>    
                        <%= f.radio_button :payment_method, Order.payment_methods.key(1) %>
                        <%= f.label :payment_method, Order.payment_methods_i18n[:transfer]%>
                </div>
                
                <!--ご自身の住所-->
                <div class="form-group">
                    <label>お届け先</label>
                    <%= f.radio_button :address, 0, checked: true %>
                    <%= f.label "ご自身の住所" %>
                    &emsp;&emsp;<%= "#{current_customer.postal_code} #{current_customer.address}" %>
                    <br>
                    &emsp;&emsp;<%= "#{current_customer.last_name} #{current_customer.first_name}" %>
                </div>
                
                
                <!--登録先住所から選択-->
                <div class="form-group">
                    <%= f.radio_button :address, 1 %>
                    <%= f.label "登録先済みの住所から選択" %>
                    <%= f.select :address_id, options_from_collection_for_select(ShippingAddress.all, :id, :address_display) %>
                </div>
                
              <!--新しいお届け先-->
               <div class="form-group">
                   <%= f.radio_button :address, 2 %>
                    <%= f.label "新しいお届け先" %>
                    
                     <div class="field">
                      <label>郵便番号(ハイフンなし)</label>
                      <%= f.text_field :postal_code %>
                    </div>
                    
                    <div class="field">
                      <label>住所</label>
                      <%= f.text_field :address %>
                    </div>
                    
                    <div class="field">
                    <label>宛名</label>
                     <%= f.text_field :name %>
                    </div>
                </div>
                <%= f.submit "確認画面へ進む", class: "btn btn-primary" %>
            <% end %>
   