<div class="contaienr">
    <div class="row">
        <div class="col-xs-1">
            <h3>注文情報入力</h3>
            <%= form_with model: @order, method: :post, local: true do |f| %>
                <div class="form-group">
                    <%= f.label "支払い方法" %>
                    <labe>
                        <%= f.radio_button :payment_method, 0, checked: true %>
                        クレジットカード
                    </label>
                    
                    <label>
                        <%= f.radio_button :payment_method, 1 %>
                        銀行振込
                    </label>
                </div>
                
                <div class="form-group">
                    <%= f.label "お届け先" %>
                    <%= f.radio_button :address_number, 1 %>
                    <%= f.label :address_number_1, "ご自身の住所" %>
                    <%= current_customer.customer_address %>
                </div>
                <div class="form-group">
                    <%= f.radio_button :address_number, 2 %>
                    <%= f.label :address_number_2, "登録先済みの住所から選択" %>
                    <%= f.collection_select(:registered, current_customer.addresses.all, :id, :address %>
                </div>
                <div class="form-group">
                    <%= f.radio_button :address_number, 3 %>
                    <%= f.label :address_number_3, "新しいお届け先" %>
                    
                    <%= f.label :shipping_address, "郵便番号(ハイフンなし)" %>
                    <%= f.text_field :postal_code %>
                    
                    <%= f.label :address, "住所" %>
                    <%= f.text_field :address %>
                    
                    <%= f.label :address_name, "宛名" %>
                    <%= f.text_field :address_name %>
                </div>
                <%= f.submit "確認画面へ進む", class: "btn btn-primary" %>
            <% end %>
        </div>
    </div>
</div>